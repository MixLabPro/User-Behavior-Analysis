{
  "compilerOptions": {
    // 基础选项
    "target": "ES2018",                          // 编译目标版本
    "lib": ["DOM", "DOM.Iterable", "ES2018"],   // 包含的库文件
    "allowJs": true,                             // 允许编译 JavaScript 文件
    "skipLibCheck": true,                        // 跳过库文件的类型检查
    "esModuleInterop": true,                     // 启用 ES 模块互操作
    "allowSyntheticDefaultImports": true,        // 允许合成默认导入
    "strict": true,                              // 启用所有严格类型检查选项
    "forceConsistentCasingInFileNames": true,    // 强制文件名大小写一致
    
    // 模块解析
    "module": "None",                        // 模块系统
    "moduleResolution": "node",                  // 模块解析策略
    "noEmit": false,                             // 生成输出文件
    
    // 输出配置
    "outDir": "./dist",                          // 输出目录
    "rootDir": "./",                             // 根目录
    "declaration": true,                         // 生成 .d.ts 文件
    "declarationMap": true,                      // 生成声明文件的 source map
    "sourceMap": true,                           // 生成 source map
    
    // 严格检查
    "noImplicitAny": true,                       // 不允许隐式 any
    "strictNullChecks": true,                    // 严格空值检查
    "strictFunctionTypes": true,                 // 严格函数类型检查
    "noImplicitReturns": true,                   // 函数必须有返回值
    "noFallthroughCasesInSwitch": true,         // switch 语句必须处理所有情况
    "noUncheckedIndexedAccess": false,           // 索引访问检查
    
    // 其他选项
    "removeComments": false,                     // 保留注释
    "noEmitOnError": true,                       // 有错误时不生成文件
    "incremental": true,                         // 增量编译
    "tsBuildInfoFile": "./dist/.tsbuildinfo"     // 构建信息文件位置
  },
  "include": [
    "*.ts",
    "*.js"
, "demo/example.ts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
